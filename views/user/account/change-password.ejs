<!DOCTYPE html>
<html lang="th">
<head>
    <%- include('../../util/head', {title: "Change + target"})%>
</head>
<body>

<%- include('../../util/navbar')%>

<div class="container d-flex justify-content-center align-items-center" style="margin-top: 120px;">
    <div class="card shadow p-4 bg-dark text-white" style="width: 350px;">
        <h3 class="text-center mb-3">Change <%= target%></h3>
        <% if (typeof message !== 'undefined') { %>
            <div class="alert alert-danger p-1 fs-6">
                <small><%= message %></small>
            </div>
        <% } %>
        <form method="post" action="/update-profile">

            <input type="hidden" name="id" id="id" value="<%= userTarget._id %>">
            <input type="hidden" name="type" value="<%= target.toLowerCase() %>">

            <div class="mb-3">
                <label for="text" class="form-label">New Password</label>
                <input type="password" class="form-control" name="newPassword" placeholder="New password" required>
            </div>

            <div class="mb-3">
                <label for="text" class="form-label">Confirm New Password</label>
                <input type="password" class="form-control" name="confirmNewPassword" placeholder="Confirm new password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100 box-shadow-primary">Change</button>
        </form>

        <div class="mt-3 text-center">
            <a href="/account" class="btn btn-outline-warning box-shadow-warning w-100 text-decoration-none">Back</a>
        </div>
    </div>
</div>

<%- include('../../util/footer')%>
</body>
</html>
