<!doctype html>
<html lang="en">
<head>
    <%- include('../../util/head', {title: "Manage Category"})%>
</head>
<body>
    <%- include('../../util/navbar')%>


    <div class="container mt-5">
        <h2 class="text-center mb-4" style="font-weight: bold">CATEGORIES LIST</h2>

        <table class="table table-bordered">
            <thead>
            <tr>
                <th style="width: 8%">No.</th>
                <th>Name</th>
                <th class="text-center" style="width: 10%">Manage</th>
            </tr>
            </thead>
            <tbody id="category-list">
            <% if(typeof categories !== 'undefined') { %>
                <% for(var i = 0; i < Object.values(categories).length; i++) { %>
                    <tr>
                        <td class="align-content-center"><%= i + 1 %></td>
                        <td class="align-content-center"><%= categories[i].name %></td>
                        <td class="d-flex p-1">
                            <form method="post" action="/manage/category/edit">
                                <input type="hidden" name="id" value="<%= categories[i]._id%>">
                                <button type="submit" class="btn btn-warning btn-sm m-1">Edit</button>
                            </form>

                            <a href="/manage/category/delete/<%= categories[i]._id%>" onclick="return confirm('Are you sure you want to delete this category?')" type="button" class="btn btn-danger btn-sm m-1" data-toggle="modal" data-target="#delete-product">Delete</a>
                        </td>
                    </tr>
                <% } %>
            <% } %>
            </tbody>
        </table>

        <div class="text-center">
            <a href="/manage/category/add" class="btn btn-success">New Category</a>
        </div>
    </div>


    <%- include('../../util/footer')%>
</body>
</html>