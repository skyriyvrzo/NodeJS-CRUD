<!DOCTYPE html>
<html lang="th">
<head>
    <%- include('../../util/head', {title: "Edit Category"})%>
</head>
<body>
<%- include('../../util/navbar')%>
<div class="container mt-5 text-white">
    <h2 class="text-center mb-4 fw-bold fst-normal">Editing <span style="color: #2563eb"><%= target.name %></span></h2>

    <div class="card shadow p-4 bg-dark text-white">
        <form action="/manage/product/update" method="POST" enctype="multipart/form-data">
            <input type="hidden" value="<%= target.id %>" name="id">

            <div class="mb-3">
                <label for="productName" class="form-label">Name</label>
                <input type="text" class="form-control" id="productName" name="productName" value="<%= target.name %>" placeholder="Name..." required>
            </div>

            <div class="mb-3">
                <label for="productPrice" class="form-label">Price</label>
                <input type="text" class="form-control" id="productPrice" name="productPrice" value="<%= target.price %>"  placeholder="Price..." required>
            </div>

            <div class="mb-3">
                <label for="productCategory" class="form-label">Category</label>
                <select class="form-select" id="productCategory" name="productCategory" required>
                    <% if(target.category !== null) { %>
                        <option value="<%= target.category.name %>" selected><%= target.category.name %></option>
                        <% Object.values(categories).forEach(function(c){ %>
                            <% if (c.name !== target.category.name) { %>
                                <option value="<%= c.name%>"><%= c.name %></option>
                            <% } %>
                        <% }) %>
                    <% } else { %>
                        <option disabled selected>NullPointerException</option>
                    <% } %>
                </select>
            </div>

            <div class="mb-3">
                <label for="productImage" class="form-label">Image</label>
                <input type="file" class="form-control" id="productImage" name="productImage">
            </div>

            <div class="mb-3">
                <label for="productDescription" class="form-label">Description</label>
                <input type="text" class="form-control" id="productDescription" name="productDescription" value="<%= target.description %>" placeholder="Description..." required>
            </div>

            <button type="submit" class="btn btn-primary w-100 box-shadow-primary">Add Product</button>
        </form>
    </div>

    <div class="mt-4 text-center">
        <a href="/manage/product" class="btn btn-outline-primary box-shadow-primary text-decoration-none">Back</a>
    </div>
</div>

<%- include('../../util/footer')%>
</body>
</html>
