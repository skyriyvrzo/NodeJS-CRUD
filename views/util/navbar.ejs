                <li class="nav-item dropdown me-3">
                    <a class="nav-link dropdown-toggle" href="/" id="navbarDropdown" role="button" data-bs-toggle="dropdown">PRODUCTS</a>
                    <% if(typeof categories !== "undefined") { %>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <% Object.values(categories).forEach(function(c){ %>
                                <li><a class="dropdown-item nav-animation nav-sub-menu" href="/"><%= c.name %></a></li>
                            <% }) %>
                        </ul>
                    <% } %>
                </li>
                <li class="nav-item dropdown me-3">
                    <a class="nav-link dropdown-toggle" href="/" id="navbarDropdown" role="button" data-bs-toggle="dropdown">MANAGE</a>
