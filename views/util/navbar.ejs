                    <% } else { %>
                            <a class="nav-link dropdown-toggle" href="/" id="navbarDropdown" role="button" data-bs-toggle="dropdown">ACCOUNT</a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="nav-link nav-animation nav-sub-menu" href="/account">Account</a></li>
                                <li><a class="nav-link nav-animation nav-sub-menu" href="/logout">Logout</a></li>
